{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "asbx-org",
      "image": "{$AWS_ACCOUNT_ID}.dkr.ecr.{$AWS_DEFAULT_REGION}.amazonaws.com/asbx-org:latest",
      "hostname": "asbx-org",
      "memory": 2048,
      "essential": true,
      "portMappings": [
        {
          "hostPort": 8000,
          "containerPort": 8000
        }
      ]
    },
    {
      "name": "nginx",
      "image": "{$AWS_ACCOUNT_ID}.dkr.ecr.{$AWS_DEFAULT_REGION}.amazonaws.com/nginx:latest",
      "hostname": "nginx",
      "memory": 512,
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
       "links": ["asbx-org"]
    }
  ]
}